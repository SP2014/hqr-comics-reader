<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_comic_default_width"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_default_min"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_default_min"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/comicImage"
            android:layout_width="@dimen/item_comic_poster_width"
            android:layout_height="@dimen/item_comic_poster_height"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/img_placeholder"/>

        <TextView
            android:id="@+id/comicTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/txt_size_small"
            android:layout_marginTop="@dimen/item_comic_title_margin_top"
            android:ellipsize="end"
            android:textColor="@color/colorPrimaryText"
            android:lines="2"
            android:gravity="center"/>

    </LinearLayout>

    <ToggleButton
        android:id="@+id/addToFavBtn"
        android:layout_width="@dimen/add_to_fav_size"
        android:layout_height="@dimen/add_to_fav_size"
        android:layout_gravity="center"
        android:background="@drawable/button_favorite"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn=""/>

</RelativeLayout>