<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordenation_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <com.tiagohs.hqr.utils.ReaderViewPager
        android:id="@+id/readerViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/movie_detail_app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            android:background="@color/blackOpacity"
            android:theme="?attr/actionBarTheme"/>

        <RelativeLayout
            android:id="@+id/readerBottomMenu"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@color/blackOpacity"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:focusable="false">

            <ImageButton
                android:id="@+id/rightButton"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_navigate_next_white"
                android:layout_alignParentEnd="true"/>

            <ImageButton
                android:id="@+id/leftButton"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_navigate_before_white"/>

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/pagesSpinner"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:ms_background_color="@color/blackOpacity"
                app:ms_background_selector="@color/blackOpacity"
                app:ms_text_color="@color/white"
                app:ms_arrow_tint="@color/white"
                app:ms_dropdown_max_height="400dp"/>

        </RelativeLayout>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>